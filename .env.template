# Kafka configuration
KAFKA_BOOTSTRAP_SERVERS= # e.g., kafka:9092

# Cassandra configuration
CASSANDRA_CONTACT_POINTS= # e.g., cassandra
CASSANDRA_PORT= # default: 9042
CASSANDRA_KEYSPACE= # e.g., advibe_keyspace
CASSANDRA_USERNAME= # e.g., cassandra
CASSANDRA_PASSWORD= # e.g., cassandra

# Docker image prefix for Jib
DOCKER_IMAGE_PREFIX= # e.g., myregistry.com/myuser

# Java options (adjust for your deployment environment)
JAVA_OPTS=-Xms512m -Xmx1024m # adjust as needed

# Spring profile configuration
SPRING_PROFILES_ACTIVE= # e.g., dev

# Kafka Consumer Group ID
KAFKA_CONSUMER_GROUP_ID= # e.g., advibe-consumer-group

# Server port (default)
SERVER_PORT= # default: 8080
